    "version": "0.2.0",
    "configurations": [
        {
            "name": "GC: g explore",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${fileDirname}${pathSeparator}..${pathSeparator}examples",
            "program": ".${pathSeparator}global_coupling_fitting.py",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "..${pathSeparator}src"},
            "args": [
                "--nsubj", "21",
                "--bpf", "2", "0.005", "0.08",
                "--observables", "FC,KS,PS", "swFCD,KS,PS", "phFCD,KS,PS",
                "--model", "Deco2014", "--obs-var", "re",
                "--param", "list", "g", "1.0", "2.0", "4.0", "8.0",
                "--tr", "720",
                "--tmax", "600",
                "--fmri-path", "./Data_Raw/ebrains_popovych",
                "--out-path", "./Data_Produced/ebrains_popovych/deco_bpf_explore"
            ]
        },
        {
            "name": "GC: plot G results",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${fileDirname}${pathSeparator}..${pathSeparator}examples",
            "program": ".${pathSeparator}global_coupling_fitting.py",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "..${pathSeparator}src"},
            "args": [
                "--plot-g",
                "--out-path", "./Data_Produced/full_scan_montbrio_no_fic"
            ]
        },
        {
            "name": "Gen BOLD",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${fileDirname}${pathSeparator}..${pathSeparator}examples",
            "program": ".${pathSeparator}gen_bold.py",
            "console": "integratedTerminal",
            "env": {"PYTHONPATH": "..${pathSeparator}src"},
            "args": [
                "--model", "Montbrio",
                "--obs-var", "r_e",
                "--param", "single", "g", "1.0",
                "--param", "single", "auto_fic", "False",
                "--tr", "720",
                "--sc-matrix", "./Data_Raw/ebrains_popovych/000/Counts.csv",
                "--out-path", "./Data_Produced/ebrains_popovych"
            ]
        }
    ]
}